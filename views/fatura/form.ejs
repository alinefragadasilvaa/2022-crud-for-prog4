<html>
	<head>
		<title>Organizações Tabajara</title>
		<meta charset="UTF-8">
	</head>
	<body>
		<h1>Fatura de Serviços de Telecomunicações</h1>
		<hr>
		<form action="/salvarFatura" method="post">
			<fieldset>
				<legend>Dados da Fatura</legend>
				
				<label for="cpf_cliente">CPF do Cliente:</label><br>
				<select name="cpf_cliente" id="cpf_cliente">
					<option hidden>-- Selecione um Cliente --</option>
					<% clientes.forEach((c, index) => { %>
						<option value="<%= c.cpf %>"><%= c.nome %></option>
					<% }) %>
				</select>
				<br><br>
		
				<label for="id_servico">ID do Serviço:</label><br>
				<select name="id_servico" id="id_servico">
					<option hidden>-- Selecione um Serviço --</option>
					<% servicos.forEach((s, index) => { %>
						<option value="<%= s.id %>"><%= s.descricao %></option>
					<% }) %>
				</select>
				<br><br>
				
				<label for="data_emissao">Data de Emissão:</label><br>
				<input type="date" name="data_emissao" id="data_emissao" size="20"><br><br>
				
				<label for="data_vencimento">Data de Vencimento:</label><br>
				<input type="date" name="data_vencimento" id="data_vencimento" size="20">
			</fieldset><br>
			
			<input type="submit" name="salvar" value="Salvar">
			<input type="reset" name="limpar" value="Limpar">
		</form>
	</body>
</html>